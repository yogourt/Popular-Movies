<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/luckyPoint</item>
        <item name="colorPrimaryDark">@color/toryBlue</item>
        <item name="colorAccent">@color/mandy</item>

        <!-- menu item background color -->
        <item name="android:itemBackground">@color/toryBlue</item>

    </style>

    <style name="DetailBottomTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:background">@color/quartz</item>
        <item name="android:textColor">@color/luckyPoint</item>
    </style>

    <style name="TrailerTextStyle" parent="DetailBottomTextStyle">
        <item name="android:textColor">@color/trailer_text_selector</item>
    </style>

    <style name="RatingBar" parent="@style/Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/whisper</item>
        <item name="colorControlActivated">@color/rose</item>
    </style>



</resources>